@model Issue.ViewModel.BugCreateViewModel

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ProjectId">Select Project:</label>
        <select asp-for="ProjectId" asp-items="@Model.Projects" class="form-control">
            <option value="">-- Select Project --</option>
        </select>
        <span asp-validation-for="ProjectId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BugName">Bug Name</label>
        <input asp-for="BugName" class="form-control" />
        <span asp-validation-for="BugName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Messages" >Bug Description</label>
        <textarea asp-for="Messages" class="form-control" rows="12"></textarea>
        <span asp-validation-for="Messages" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Create Bug</button>
</form>
